@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<!-- Navigation Bar -->
<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top">
    <div class="container">
        <a class="navbar-brand" href="/">
            <img src="/images/logo.png" alt="Gift Of The Givers Foundation" height="40">
        </a>
        <div class="navbar-nav ms-auto">
            <a class="nav-link text-success me-2" asp-area="Identity" asp-page="/Account/Register">Register</a>
            <a class="btn btn-success rounded-pill px-4" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </div>
    </div>
</nav>

<!-- Login Card -->
<div class="d-flex justify-content-center align-items-center vh-100 bg-light pt-5">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body p-5">
                <h2 class="text-center mb-2 text-success fw-bold">Welcome Back</h2>
                <p class="text-center text-muted mb-4">Login to continue your journey with Gift of the Givers</p>
                <hr class="mb-4" />

                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <!-- Email -->
                    <div class="form-floating mb-3 position-relative">
                        <input asp-for="Input.Email" class="form-control ps-5 rounded-3" autocomplete="username" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <i class="bi bi-envelope-fill position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <!-- Password -->
                    <div class="form-floating mb-3 position-relative">
                        <input asp-for="Input.Password" type="password" class="form-control ps-5 rounded-3" autocomplete="current-password" placeholder="Password" />
                        <label asp-for="Input.Password">Password</label>
                        <i class="bi bi-lock-fill position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <!-- Remember Me -->
                    <div class="form-check mb-4">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label" asp-for="Input.RememberMe"></label>
                    </div>

                    <!-- Login Button -->
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-success mb-3 shadow-sm rounded-pill">
                        Login
                    </button>

                    <!-- Links -->
                    <div class="text-center">
                        <p class="mb-1">
                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-success fw-semibold text-decoration-none">Forgot your password?</a>
                        </p>
                        <p class="mb-1">
                            Don’t have an account?
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-success fw-semibold text-decoration-none">Register here</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-success fw-semibold text-decoration-none">Resend email confirmation</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
