@{
    ViewData["Title"] = "Donation History";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gift of the Givers</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        :root {
            --gift-green: #006747;
            --gift-gold: #D4AF37;
            --light-bg: #F8F9FA;
        }

        body {
            background-color: var(--light-bg) !important;
            padding-top: 76px;
        }

        .text-gift-green {
            color: var(--gift-green) !important;
        }

        .bg-gift-green {
            background-color: var(--gift-green) !important;
        }

        .border-gold {
            border-color: var(--gift-gold) !important;
        }
    </style>
</head>
<body>
    <!-- Navigation (same as dashboard) -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white fixed-top border-bottom border-gold">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="/images/logo.png" alt="Gift Of The Givers Foundation" height="40" class="me-2">
                <span class="fw-bold text-gift-green">Gift of the Givers</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link btn-nav fw-semibold me-3" asp-area="Donor" asp-controller="Dashboard" asp-action="Index">
                            <i class="bi bi-speedometer2 me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn-nav fw-semibold me-3 active" asp-area="Donor" asp-controller="Dashboard" asp-action="History">
                            <i class="bi bi-clock-history me-1"></i>History
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn-nav fw-semibold me-3" asp-area="Donor" asp-controller="Dashboard" asp-action="Profile">
                            <i class="bi bi-person-circle me-1"></i>Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-outline-gold rounded-pill px-3 fw-semibold">
                                <i class="bi bi-box-arrow-right me-1"></i>Logout
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- History Content -->
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <h1 class="fw-bold text-gift-green mb-2">Donation History</h1>
                <p class="text-muted mb-4">View your past donations and contributions</p>

                <div class="card">
                    <div class="card-header bg-gift-green text-white py-3">
                        <h5 class="mb-0 fw-bold">
                            <i class="bi bi-clock-history me-2"></i>Your Donation History
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Campaign</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Reference</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>@DateTime.Now.AddDays(-2).ToString("MMM dd, yyyy")</td>
                                        <td>Emergency Relief Fund</td>
                                        <td>R 500.00</td>
                                        <td><span class="badge bg-success">Completed</span></td>
                                        <td>REF-00123</td>
                                    </tr>
                                    <tr>
                                        <td>@DateTime.Now.AddDays(-15).ToString("MMM dd, yyyy")</td>
                                        <td>Medical Supplies Drive</td>
                                        <td>R 1,000.00</td>
                                        <td><span class="badge bg-success">Completed</span></td>
                                        <td>REF-00119</td>
                                    </tr>
                                    <tr>
                                        <td>@DateTime.Now.AddDays(-30).ToString("MMM dd, yyyy")</td>
                                        <td>Food Aid Program</td>
                                        <td>R 750.00</td>
                                        <td><span class="badge bg-success">Completed</span></td>
                                        <td>REF-00105</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="bg-gift-green text-white mt-5 py-4">
        <div class="container text-center">
            <p class="mb-1 fw-bold">&copy; 2025 Gift of the Givers Foundation</p>
            <p class="mb-0 opacity-75">Making a difference, one donation at a time</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>