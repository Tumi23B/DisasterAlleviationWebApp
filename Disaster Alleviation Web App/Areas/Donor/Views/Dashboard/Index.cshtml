            // History action functions
            window.viewReceipt = function(receiptId) {
                alert(`Opening receipt ${receiptId}...`);
                // In a real application, this would open the receipt PDF
            };

            window.viewClothingDetails = function(donationId) {
                alert(`Showing details for clothing donation ${donationId}...`);
                // In a real application, this would show detailed clothing items
            };

            window.viewFoodDetails = function(donationId) {
                alert(`Showing details for food donation ${donationId}...`);
                // In a real application, this would show detailed food items
            };

            window.viewMedicalDetails = function(donationId) {
                alert(`Showing details for medical donation ${donationId}...`);
                // In a real application, this would show detailed medical items
            };

            window.manageRecurring = function(donationId) {
