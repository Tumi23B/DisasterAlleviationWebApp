@model Disaster_Alleviation_Web_App.Areas.Donor.Models.DashboardViewModel
@{
    ViewData["Title"] = "Donor Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gift of the Givers</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        /* CSS Variables for consistent theming */
        :root {
            --gift-green: #006747;
            --gift-green-light: #008055;
            --gift-gold: #D4AF37;
            --gift-gold-light: #F4E4A6;
            --white: #FFFFFF;
            --light-bg: #F8F9FA;
            --border-color: #E9ECEF;
            --text-dark: #333333;
            --text-muted: #6C757D;
        }

        /* Base Styles */
        body {
            background-color: var(--white) !important;
            font-family: 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            min-height: 100vh;
            padding-top: 76px; /* Space for fixed navbar */
            color: var(--text-dark);
        }

        /* Brand Color Classes */
        .text-gold {
            color: var(--gift-gold) !important;
        }

        .text-gift-green {
            color: var(--gift-green) !important;
        }

        .bg-gift-green {
            background-color: var(--gift-green) !important;
        }

        .bg-gold {
            background-color: var(--gift-gold) !important;
        }

        .border-gold {
            border-color: var(--gift-gold) !important;
        }

        /* Button Styles */
        .btn-gold {
            background: linear-gradient(135deg, var(--gift-gold), #E5C158);
            color: var(--gift-green);
            border: none;
            font-weight: 600;
            padding: 12px 24px;
            transition: all 0.3s ease;
        }

            .btn-gold:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(212, 175, 55, 0.3);
                color: var(--gift-green);
            }

        .btn-success {
            background: linear-gradient(135deg, var(--gift-green), var(--gift-green-light));
            border: none;
            font-weight: 600;
            padding: 12px 24px;
            transition: all 0.3s ease;
        }

            .btn-success:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(0, 103, 71, 0.3);
            }

        .btn-outline-gold {
            border: 2px solid var(--gift-gold);
            color: var(--gift-gold);
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-outline-gold:hover {
                background-color: var(--gift-gold);
                color: var(--gift-green);
                transform: translateY(-2px);
            }

        /* Card and Layout Styles */
        .card {
            border: none;
            border-radius: 12px;
            transition: all 0.3s ease;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }

            .card:hover {
                transform: translateY(-4px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.12);
            }

        .stat-card {
            background: linear-gradient(135deg, var(--white), var(--light-bg));
            border-left: 4px solid var(--gift-green);
        }

        .impact-card {
            background: linear-gradient(135deg, var(--light-bg), var(--white));
            border-top: 4px solid var(--gift-gold);
        }

        /* Navigation Styles */
        .navbar {
            box-shadow: 0 2px 15px rgba(0,0,0,0.1);
            backdrop-filter: blur(10px);
        }

        .nav-link {
            font-weight: 500;
            transition: all 0.3s ease;
            color: var(--gift-green) !important;
        }

            .nav-link:hover {
                color: var(--gift-gold) !important;
            }

            .nav-link.active {
                color: var(--gift-gold) !important;
                font-weight: 600;
            }

        /* Progress Bar Styles */
        .progress {
            height: 8px;
            border-radius: 10px;
            background-color: var(--border-color);
        }

        .progress-bar {
            border-radius: 10px;
            background: linear-gradient(90deg, var(--gift-green), var(--gift-green-light));
        }

        /* Impact Circle Styles */
        .impact-circle {
            width: 140px;
            height: 140px;
            border-radius: 50%;
            background: conic-gradient(var(--gift-green) 0deg, var(--gift-green) calc(var(--rotation, 0) * 1deg), var(--border-color) calc(var(--rotation, 0) * 1deg));
            position: relative;
            margin: 0 auto;
        }

        .impact-circle-inner {
            position: absolute;
            top: 10px;
            left: 10px;
            right: 10px;
            bottom: 10px;
            background: var(--white);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
        }

        /* Badge Styles */
        .badge {
            font-weight: 500;
            padding: 6px 12px;
        }

        /* Footer Styles */
        footer {
            margin-top: 4rem;
        }

        /* Clickable cursor for buttons */
        .btn, .nav-link {
            cursor: pointer;
        }

        /* Modal Styles */
        .modal-content {
            border-radius: 12px;
            border: none;
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        }

        .modal-header {
            background: linear-gradient(135deg, var(--gift-green), var(--gift-green-light));
            color: white;
            border-radius: 12px 12px 0 0;
            padding: 1.5rem;
        }

        .modal-footer {
            border-top: 1px solid var(--border-color);
            padding: 1.5rem;
        }

        .form-label {
            font-weight: 600;
            color: var(--text-dark);
        }

        .form-control, .form-select {
            border-radius: 8px;
            padding: 10px 15px;
            border: 1px solid var(--border-color);
            transition: all 0.3s ease;
        }

            .form-control:focus, .form-select:focus {
                border-color: var(--gift-green);
                box-shadow: 0 0 0 0.25rem rgba(0, 103, 71, 0.25);
            }

        /* Recurring Donations Modal Styles */
        .recurring-option {
            border: 2px solid var(--border-color);
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .recurring-option:hover {
                border-color: var(--gift-green);
                background-color: rgba(0, 103, 71, 0.05);
            }

            .recurring-option.selected {
                border-color: var(--gift-green);
                background-color: rgba(0, 103, 71, 0.1);
            }

            .recurring-option input[type="radio"] {
                margin-right: 10px;
            }

        /* Clothing Donation Styles */
        .clothing-category {
            border: 2px solid var(--border-color);
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .clothing-category:hover {
                border-color: var(--gift-gold);
                background-color: rgba(212, 175, 55, 0.05);
            }

            .clothing-category.selected {
                border-color: var(--gift-gold);
                background-color: rgba(212, 175, 55, 0.1);
            }

        .donation-type-btn {
            border: 2px solid var(--border-color);
            border-radius: 8px;
            padding: 15px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-bottom: 10px;
        }

            .donation-type-btn:hover {
                border-color: var(--gift-green);
                transform: translateY(-2px);
            }

            .donation-type-btn.selected {
                border-color: var(--gift-green);
                background-color: rgba(0, 103, 71, 0.1);
            }

        .clothing-item {
            border: 1px solid var(--border-color);
            border-radius: 8px;
            padding: 10px;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <!-- Main Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white fixed-top border-bottom border-gold">
        <div class="container">
            <!-- Brand Logo and Name -->
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="/images/logo.png" alt="Gift Of The Givers Foundation" height="40" class="me-2">
                <span class="fw-bold text-gift-green">Gift of the Givers</span>
            </a>

            <!-- Mobile Menu Toggle -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navigation Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">

                    <!-- Dashboard Link (Active) -->
                    <li class="nav-item">
                        <a class="nav-link btn-nav fw-semibold me-3 active" asp-area="Donor" asp-controller="Dashboard" asp-action="Index">
                            <i class="bi bi-speedometer2 me-1"></i>Dashboard
                        </a>
                    </li>

                    <!-- Donation History Link -->
                    <li class="nav-item">
                        <a class="nav-link btn-nav fw-semibold me-3" asp-area="Donor" asp-controller="Dashboard" asp-action="History">
                            <i class="bi bi-clock-history me-1"></i>History
                        </a>
                    </li>

                    <!-- Profile Management Link -->
                    <li class="nav-item">
                        <a class="nav-link btn-nav fw-semibold me-3" href="#" id="profileLink">
                            <i class="bi bi-person-circle me-1"></i>Profile
                        </a>
                    </li>

                    <!-- Logout Button -->
                    <li class="nav-item">
                        <form asp-area="Identity" asp-page="/Account/Login" method="post" class="d-inline">
                            <button type="submit" class="btn btn-outline-gold rounded-pill px-3 fw-semibold btn-nav">
                                <i class="bi bi-box-arrow-right me-1"></i>Logout
                            </button>
                        </form>
                    </li>

                </ul>
            </div>

        </div>
    </nav>

    <!-- Main Dashboard Content Container -->
    <div class="container-fluid mt-4">

        <!-- Welcome Section with User Greeting -->
        <div class="row mb-4">
            <div class="col-lg-8">
                <!-- Personalized Welcome Message -->
                <h1 class="fw-bold text-gift-green mb-2">
                    Welcome Back, @Model.FullName!
                </h1>
                <p class="text-muted mb-3">
                    Thank you for your continued support in making a difference through humanitarian aid
                </p>
                <!-- User Status and Information -->
                <div class="d-flex flex-wrap gap-3 align-items-center">
                    <span class="badge bg-success rounded-pill py-2 px-3 fw-semibold">
                        <i class="bi bi-check-circle me-1"></i>Verified Donor
                    </span>
                    <span class="text-muted">
                        <i class="bi bi-clock me-1"></i>Last login: @DateTime.Now.ToString("MMM dd, yyyy 'at' hh:mm tt")
                    </span>
                </div>
            </div>
            <!-- Monthly Impact Summary Card -->
            <div class="col-lg-4 mt-3 mt-lg-0">
                <div class="card impact-card h-100">
                    <div class="card-body text-center p-4">
                        <h6 class="text-gift-green fw-bold mb-3">Your Impact This Month</h6>
                        <div class="d-flex justify-content-around align-items-center">
                            <div>
                                <div class="fw-bold text-gift-green fs-3">@Model.CompletedDonations</div>
                                <small class="text-muted">Donations Made</small>
                            </div>
                            <div class="vr"></div>
                            <div>
                                <!-- null check -->
                                <div class="fw-bold text-gold fs-3">
                                    R @((Model.TotalDonations > 0 ? (Model.TotalDonations / 12) : 0).ToString("N0"))
                                </div>
                                <small class="text-muted">Monthly Average</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Dashboard Grid Layout -->
        <div class="row g-4">

            <!-- Left Column (8 units wide) -->
            <div class="col-lg-8">
                <!-- Statistics Cards Row -->
                <div class="row g-3 mb-4">

                    <!-- Total Donations Card -->
                    <div class="col-xl-3 col-md-6">
                        <div class="card stat-card h-100">
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h6 class="fw-bold text-muted mb-2">Total Donations</h6>
                                        <p class="h3 fw-bold text-gift-green mb-1">R @Model.TotalDonations.ToString("N2")</p>
                                        <small class="text-muted">Lifetime contributions</small>
                                    </div>
                                    <i class="bi bi-cash-stack fs-2 text-gift-green opacity-75"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Pending Requests Card -->
                    <div class="col-xl-3 col-md-6">
                        <div class="card stat-card h-100">
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h6 class="fw-bold text-muted mb-2">Pending Requests</h6>
                                        <p class="h3 fw-bold text-warning mb-1">@Model.PendingRequests</p>
                                        <small class="text-muted">Awaiting your support</small>
                                    </div>
                                    <i class="bi bi-clock-history fs-2 text-warning opacity-75"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Completed Donations Card -->
                    <div class="col-xl-3 col-md-6">
                        <div class="card stat-card h-100">
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h6 class="fw-bold text-muted mb-2">Completed</h6>
                                        <p class="h3 fw-bold text-success mb-1">@Model.CompletedDonations</p>
                                        <small class="text-muted">Successful donations</small>
                                    </div>
                                    <i class="bi bi-check-circle fs-2 text-success opacity-75"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Impact Score Card -->
                    <div class="col-xl-3 col-md-6">
                        <div class="card stat-card h-100">
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h6 class="fw-bold text-muted mb-2">Impact Score</h6>
                                        <p class="h3 fw-bold text-gold mb-1">@(Model.CompletedDonations * 10)</p>
                                        <small class="text-muted">Lives touched</small>
                                    </div>
                                    <i class="bi bi-heart-fill fs-2 text-gold opacity-75"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions and Recent Activity Side by Side -->
                <div class="row g-4">

                    <!-- Quick Actions Panel -->
                    <div class="col-md-6">
                        <div class="card h-100">
                            <div class="card-header bg-gift-green text-white rounded-top-3 py-3">
                                <h5 class="mb-0 fw-bold">
                                    <i class="bi bi-lightning-charge-fill me-2"></i>Quick Actions
                                </h5>
                            </div>
                            <div class="card-body p-3">
                                <div class="row g-2">
                                    <!-- Donation Type Selection -->
                                    <div class="col-12 mb-3">
                                        <div class="row g-2">
                                            <div class="col-6">
                                                <div class="donation-type-btn selected" data-type="monetary">
                                                    <i class="bi bi-cash-coin fs-4 text-gift-green mb-2"></i>
                                                    <div class="fw-bold">Monetary Donation</div>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="donation-type-btn" data-type="clothing">
                                                    <i class="bi bi-bag-heart fs-4 text-gift-green mb-2"></i>
                                                    <div class="fw-bold">Clothing Donation</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Primary Donation Button - Dynamic based on selection -->
                                    <div class="col-12 mb-2" id="monetaryDonationSection">
                                        <a href="#" class="btn btn-gold w-100 rounded-2 fw-bold py-3 d-flex align-items-center justify-content-center" id="makeDonationBtn">
                                            <i class="bi bi-credit-card me-2 fs-5"></i>Make a Donation
                                        </a>
                                    </div>

                                    <!-- Clothing Donation Button -->
                                    <div class="col-12 mb-2" id="clothingDonationSection" style="display: none;">
                                        <a href="#" class="btn btn-gold w-100 rounded-2 fw-bold py-3 d-flex align-items-center justify-content-center" id="donateClothesBtn">
                                            <i class="bi bi-bag-heart me-2 fs-5"></i>Donate Clothes
                                        </a>
                                    </div>

                                    <!-- Secondary Action Buttons -->
                                    <div class="col-6 mb-2">
                                        <a href="#" class="btn btn-outline-gold w-100 rounded-2 fw-bold py-2 d-flex align-items-center justify-content-center" id="bankingDetailsBtn">
                                            <i class="bi bi-bank me-2"></i>Banking
                                        </a>
                                    </div>
                                    <div class="col-6 mb-2">
                                        <a href="#" class="btn btn-outline-gold w-100 rounded-2 fw-bold py-2 d-flex align-items-center justify-content-center" id="leaveLegacyBtn">
                                            <i class="bi bi-gem me-2"></i>Leave Legacy
                                        </a>
                                    </div>
                                    <!-- Recurring Donation Button -->
                                    <div class="col-12">
                                        <a href="#" class="btn btn-success w-100 rounded-2 fw-bold py-2 d-flex align-items-center justify-content-center" id="recurringDonationBtn">
                                            <i class="bi bi-arrow-repeat me-2"></i>Setup Recurring Donation
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Recent Activity Panel -->
                    <div class="col-md-6">
                        <div class="card h-100">
                            <div class="card-header bg-gold text-dark rounded-top-3 py-3">
                                <h5 class="mb-0 fw-bold">
                                    <i class="bi bi-activity me-2"></i>Recent Activity
                                </h5>
                            </div>
                            <div class="card-body p-3">
                                <!-- Recent Activity Item 1 -->
                                <div class="d-flex align-items-start mb-3">
                                    <div class="bg-success rounded-circle p-2 me-3 flex-shrink-0">
                                        <i class="bi bi-check-lg text-white"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-0 fw-bold text-dark">Donation Completed</h6>
                                        <small class="text-muted">2 hours ago • R 500.00</small>
                                    </div>
                                </div>
                                <!-- Recent Activity Item 2 -->
                                <div class="d-flex align-items-start mb-3">
                                    <div class="bg-primary rounded-circle p-2 me-3 flex-shrink-0">
                                        <i class="bi bi-clock text-white"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-0 fw-bold text-dark">Recurring Setup</h6>
                                        <small class="text-muted">Yesterday • Monthly donation</small>
                                    </div>
                                </div>
                                <!-- Recent Activity Item 3 -->
                                <div class="d-flex align-items-start">
                                    <div class="bg-info rounded-circle p-2 me-3 flex-shrink-0">
                                        <i class="bi bi-bell text-white"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-0 fw-bold text-dark">New Campaign Alert</h6>
                                        <small class="text-muted">3 days ago • Emergency Relief Fund</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column (4 units wide) -->
            <div class="col-lg-4">

                <!-- Impact Meter Visualization -->
                <div class="card mb-4">
                    <div class="card-header bg-gift-green text-white rounded-top-3 py-3">
                        <h5 class="mb-0 fw-bold">
                            <i class="bi bi-graph-up me-2"></i>Your Impact Meter
                        </h5>
                    </div>
                    <div class="card-body text-center p-4">
                        <!-- Circular Progress Indicator -->
                        <div class="impact-circle mb-3" style="--rotation: @(Math.Min(Model.CompletedDonations * 3.6, 360))">
                            <div class="impact-circle-inner">
                                <div class="fw-bold fs-2 text-gift-green">@Model.CompletedDonations</div>
                                <small class="text-muted">Donations</small>
                            </div>
                        </div>
                        <p class="text-muted mb-0">
                            <!-- Dynamic encouragement message based on donation count -->
                            @if (Model.CompletedDonations >= 10)
                            {
                                <text>You're in the top 10% of donors! 🌟</text>
                            }
                            else if (Model.CompletedDonations >= 5)
                            {
                                <text>You're making a significant impact! 💪</text>
                            }
                            else
                            {
                                <text>Every donation makes a difference! ✨</text>
                            }
                        </p>
                    </div>
                </div>

                <!-- Active Campaigns Panel -->
                <div class="card">
                    <div class="card-header bg-success text-white rounded-top-3 py-3">
                        <h5 class="mb-0 fw-bold">
                            <i class="bi bi-megaphone me-2"></i>Active Campaigns
                        </h5>
                    </div>
                    <div class="card-body p-3">
                        <!-- Campaign Item 1 -->
                        <div class="campaign-item mb-3 p-3 rounded-3 bg-light">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h6 class="fw-bold mb-0 text-gift-green">Emergency Relief Fund</h6>
                                <span class="badge bg-danger">Urgent</span>
                            </div>
                            <p class="text-muted small mb-2">Support families affected by recent natural disasters</p>
                            <div class="progress mb-2">
                                <div class="progress-bar" style="width: 75%"></div>
                            </div>
                            <div class="d-flex justify-content-between small text-muted">
                                <span>75% funded</span>
                                <span>R 1.2M raised</span>
                            </div>
                        </div>

                        <!-- Campaign Item 2 -->
                        <div class="campaign-item p-3 rounded-3 bg-light">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h6 class="fw-bold mb-0 text-gift-green">Medical Supplies Drive</h6>
                                <span class="badge bg-warning text-dark">Ongoing</span>
                            </div>
                            <p class="text-muted small mb-2">Essential medical equipment for rural clinics</p>
                            <div class="progress mb-2">
                                <div class="progress-bar" style="width: 45%"></div>
                            </div>
                            <div class="d-flex justify-content-between small text-muted">
                                <span>45% funded</span>
                                <span>R 850K raised</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Section -->
    <footer class="bg-gift-green text-white mt-5 py-4">
        <div class="container text-center">
            <p class="mb-1 fw-bold">&copy; 2025 Gift of the Givers Foundation</p>
            <p class="mb-0 opacity-75">Making a difference, one donation at a time</p>
        </div>
    </footer>

    <!-- Profile Update Modal -->
    <div class="modal fade" id="profileModal" tabindex="-1" aria-labelledby="profileModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title fw-bold" id="profileModalLabel">Update Your Profile</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-4">
                    <form id="profileForm">
