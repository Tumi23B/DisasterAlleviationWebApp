    <!-- Navigation Redirection Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // ------------------------------
            // Donation Type Selection
            // ------------------------------
            const donationTypeBtns = document.querySelectorAll('.donation-type-btn');
            const monetarySection = document.getElementById('monetaryDonationSection');
            const clothingSection = document.getElementById('clothingDonationSection');

            donationTypeBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    donationTypeBtns.forEach(b => b.classList.remove('selected'));
                    this.classList.add('selected');

                    const type = this.dataset.type;
                    if (type === 'monetary') {
                        monetarySection.style.display = 'block';
                        clothingSection.style.display = 'none';
                    } else {
                        monetarySection.style.display = 'none';
                        clothingSection.style.display = 'block';
                    }
                });
            });

            // ------------------------------
            // Profile Modal Functionality
            // ------------------------------
            const profileLink = document.getElementById('profileLink');
            const profileModal = new bootstrap.Modal(document.getElementById('profileModal'));
            const saveProfileBtn = document.getElementById('saveProfileBtn');

            if (profileLink) {
                profileLink.addEventListener('click', function(e) {
                    e.preventDefault();
                    profileModal.show();
                });
            }

            if (saveProfileBtn) {
                saveProfileBtn.addEventListener('click', function() {
                    // Get form values
                    const firstName = document.getElementById('firstName').value;
                    const lastName = document.getElementById('lastName').value;
                    const email = document.getElementById('email').value;
                    const phone = document.getElementById('phone').value;
                    const address = document.getElementById('address').value;
                    const city = document.getElementById('city').value;
                    const postalCode = document.getElementById('postalCode').value;
                    const preferences = document.getElementById('preferences').value;
                    const newsletter = document.getElementById('newsletter').checked;

                    // Validate required fields
                    if (!firstName || !lastName || !email) {
                        alert('Please fill in all required fields.');
                        return;
                    }

                    // In a real application, you would send this data to the server
                    // For now, we'll just show a success message and close the modal
                    alert('Profile updated successfully!');
                    profileModal.hide();

                    // Update the welcome message with the new name
                    const welcomeHeading = document.querySelector('h1.fw-bold');
                    if (welcomeHeading) {
                        welcomeHeading.textContent = `Welcome Back, ${firstName} ${lastName}!`;
                    }
                });
            }

            // ------------------------------
            // Recurring Donations Modal Functionality
            // ------------------------------
            const recurringDonationBtn = document.getElementById('recurringDonationBtn');
            const recurringModal = new bootstrap.Modal(document.getElementById('recurringModal'));
            const confirmRecurringBtn = document.getElementById('confirmRecurringBtn');
            const customAmountContainer = document.getElementById('customAmountContainer');
            const recurringOptions = document.querySelectorAll('.recurring-option');

            if (recurringDonationBtn) {
                recurringDonationBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    recurringModal.show();
                });
            }

            // Show/hide custom amount input
            document.querySelectorAll('input[name="amount"]').forEach(radio => {
                radio.addEventListener('change', function() {
                    if (this.value === 'custom') {
                        customAmountContainer.style.display = 'block';
                    } else {
                        customAmountContainer.style.display = 'none';
                    }
                });
            });

            // Style recurring options when selected
            recurringOptions.forEach(option => {
                const radio = option.querySelector('input[type="radio"]');

                option.addEventListener('click', function() {
                    // Remove selected class from all options
                    recurringOptions.forEach(opt => {
                        opt.classList.remove('selected');
                    });

                    // Add selected class to clicked option
                    this.classList.add('selected');

                    // Check the radio button
                    radio.checked = true;
                });

                // Initialize selected state
                if (radio.checked) {
                    option.classList.add('selected');
                }
            });

            if (confirmRecurringBtn) {
                confirmRecurringBtn.addEventListener('click', function() {
                    const amountRadio = document.querySelector('input[name="amount"]:checked');
                    const frequency = document.querySelector('input[name="frequency"]:checked').value;
                    const campaign = document.getElementById('campaignSelect').value;
                    const termsAgreed = document.getElementById('termsAgreement').checked;

                    if (!termsAgreed) {
                        alert('Please agree to the terms and conditions to proceed.');
                        return;
                    }

                    let amount;
                    if (amountRadio.value === 'custom') {
                        amount = document.getElementById('customAmount').value;
                        if (!amount || amount < 10) {
                            alert('Please enter a valid custom amount (minimum R10).');
                            return;
                        }
                    } else {
                        amount = amountRadio.value;
                    }

                    // In a real application, you would process the recurring donation setup
                    // For now, we'll just show a success message
                    alert(`Recurring donation of R${amount} ${frequency} has been set up successfully for the ${document.getElementById('campaignSelect').options[document.getElementById('campaignSelect').selectedIndex].text} campaign.`);
                    recurringModal.hide();

                    // Update the recent activity section
                    const recentActivity = document.querySelector('.card-body.p-3');
                    if (recentActivity) {
                        const newActivity = document.createElement('div');
                        newActivity.className = 'd-flex align-items-start mb-3';
                        newActivity.innerHTML = `
                            <div class="bg-primary rounded-circle p-2 me-3 flex-shrink-0">
                                <i class="bi bi-arrow-repeat text-white"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-0 fw-bold text-dark">Recurring Donation Setup</h6>
                                <small class="text-muted">Just now • R ${amount} ${frequency}</small>
                            </div>
                        `;
                        recentActivity.insertBefore(newActivity, recentActivity.firstChild);
                    }
                });
            }

            // ------------------------------
            // Clothing Donation Modal Functionality
            // ------------------------------
            const donateClothesBtn = document.getElementById('donateClothesBtn');
            const clothingModal = new bootstrap.Modal(document.getElementById('clothingModal'));
            const confirmClothingBtn = document.getElementById('confirmClothingBtn');
            const addMoreClothesBtn = document.getElementById('addMoreClothesBtn');
            const clothingCategories = document.querySelectorAll('.clothing-category');
            const collectionTypeSelect = document.getElementById('collectionType');
            const collectionAddressSection = document.getElementById('collectionAddressSection');

            if (donateClothesBtn) {
                donateClothesBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    clothingModal.show();
                    addClothingItem(); // Add initial clothing item
                });
            }

            // Style clothing categories when selected
            clothingCategories.forEach(category => {
                const checkbox = category.querySelector('input[type="checkbox"]');

                category.addEventListener('click', function() {
                    checkbox.checked = !checkbox.checked;
                    if (checkbox.checked) {
                        this.classList.add('selected');
                    } else {
                        this.classList.remove('selected');
                    }
                });
            });

            // Collection type change
            collectionTypeSelect.addEventListener('change', function() {
                if (this.value === 'collection') {
                    collectionAddressSection.style.display = 'block';
                } else {
                    collectionAddressSection.style.display = 'none';
                }
            });

            // Add more clothes button
            if (addMoreClothesBtn) {
                addMoreClothesBtn.addEventListener('click', function() {
                    addClothingItem();
                });
            }

            // Confirm clothing donation
            if (confirmClothingBtn) {
                confirmClothingBtn.addEventListener('click', function() {
                    const termsAgreed = document.getElementById('clothingTerms').checked;
                    const selectedCategories = Array.from(document.querySelectorAll('.clothing-category input[type="checkbox"]:checked'));

                    if (selectedCategories.length === 0) {
                        alert('Please select at least one clothing category.');
                        return;
                    }

                    if (!termsAgreed) {
                        alert('Please confirm that all clothing is in good condition.');
                        return;
                    }

                    // Get clothing items
                    const clothingItems = [];
                    document.querySelectorAll('.clothing-item').forEach(item => {
                        const type = item.querySelector('.item-type').value;
                        const size = item.querySelector('.item-size').value;
                        const quantity = item.querySelector('.item-quantity').value;
                        const condition = item.querySelector('.item-condition').value;

                        if (type && size && quantity > 0) {
                            clothingItems.push({ type, size, quantity, condition });
                        }
                    });

                    if (clothingItems.length === 0) {
                        alert('Please add at least one clothing item.');
                        return;
                    }

                    // In a real application, you would process the clothing donation
                    alert('Clothing donation submitted successfully! We will contact you to arrange collection/drop-off.');
                    clothingModal.hide();

                    // Update the recent activity section
                    const recentActivity = document.querySelector('.card-body.p-3');
                    if (recentActivity) {
                        const newActivity = document.createElement('div');
                        newActivity.className = 'd-flex align-items-start mb-3';
                        newActivity.innerHTML = `
                            <div class="bg-info rounded-circle p-2 me-3 flex-shrink-0">
                                <i class="bi bi-bag-heart text-white"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-0 fw-bold text-dark">Clothing Donation Scheduled</h6>
                                <small class="text-muted">Just now • ${clothingItems.length} items</small>
                            </div>
                        `;
                        recentActivity.insertBefore(newActivity, recentActivity.firstChild);
                    }
                });
            }

            function addClothingItem() {
                const container = document.getElementById('clothingItemsContainer');
                const itemId = 'clothingItem_' + Date.now();

                const itemHtml = `
                    <div class="clothing-item" id="${itemId}">
                        <div class="row g-2">
                            <div class="col-md-4">
                                <label class="form-label">Item Type</label>
                                <select class="form-select item-type">
                                    <option value="">Select type</option>
                                    <option value="shirt">Shirt/Top</option>
                                    <option value="pants">Pants/Trousers</option>
                                    <option value="dress">Dress</option>
                                    <option value="jacket">Jacket/Coat</option>
                                    <option value="shoes">Shoes</option>
                                    <option value="accessories">Accessories</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Size</label>
                                <select class="form-select item-size">
                                    <option value="">Select size</option>
                                    <option value="xs">XS</option>
                                    <option value="s">S</option>
                                    <option value="m">M</option>
                                    <option value="l">L</option>
                                    <option value="xl">XL</option>
                                    <option value="xxl">XXL</option>
                                    <option value="child">Child</option>
                                    <option value="baby">Baby</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Quantity</label>
                                <input type="number" class="form-control item-quantity" min="1" value="1">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Condition</label>
                                <select class="form-select item-condition">
                                    <option value="excellent">Excellent</option>
                                    <option value="good" selected>Good</option>
                                    <option value="fair">Fair</option>
                                </select>
                            </div>
                            <div class="col-md-1 d-flex align-items-end">
                                <button type="button" class="btn btn-outline-danger btn-sm" onclick="document.getElementById('${itemId}').remove()">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                `;

                container.insertAdjacentHTML('beforeend', itemHtml);
            }

            // ------------------------------
            // Make Donation Button - Redirect to official donation page
            // ------------------------------
            const makeDonationBtn = document.getElementById('makeDonationBtn');
            if (makeDonationBtn) {
                makeDonationBtn.addEventListener('click', function(e) {
                    e.preventDefault();
